{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "0.5.2.4",
  "icons": {
    "128": "images/shortcutsandy.png"
  },
  "options_page": "options.html",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "plugins": [
    {"path": "flexkbd.dll"}
  ],
  "requirements": {
    "plugins": {"npapi": false}
  },
  "web_accessible_resources": ["kbdagent.js"],
  "content_security_policy": "script-src 'unsafe-eval' 'self'; object-src 'self';",
  "permissions": [
    "*://*/*",
    "chrome://favicon/*",
    "unlimitedStorage",
    "storage",
    "contextMenus",
    "bookmarks",
    "cookies",
    "tabs",
    "browsingData",
    "history",
    "notifications"
  ]
}
