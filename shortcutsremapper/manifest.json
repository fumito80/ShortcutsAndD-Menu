{
  "manifest_version": 2,
  "name": "Shortcuts Remapper Î²",
  "version": "0.1.0",
  "description": "You can remap keyboard shortcuts almost all. (Run Windows only)",
  "icons": {
     "128": "images/key_bindings.png"
  },
  "options_page": "options.html",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "plugins": [
    { "path": "flexkbd.dll" }
  ],
  "web_accessible_resources": ["kbdagent.js"],
  "content_security_policy": "script-src https://ajax.googleapis.com 'unsafe-eval' 'self'; object-src 'self';",
  "permissions": [
    "bookmarks",
    "tabs",
    "*://*/*",
    "chrome://favicon/*"
  ]
}
