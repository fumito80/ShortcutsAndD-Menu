{
  "manifest_version": 2,
  "name": "Shortcut Exchanger Î²",
  "version": "0.1.0",
  "description": "You can assign a shortcut key to another one freely. (Run Windows only)",
  "icons": {
     "48": "images/keyboard.png"
  },
  "options_page": "options.html",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "plugins": [
    { "path": "flexkbd.dll" }
  ],
  "web_accessible_resources": ["kbdagent.js"],
  "content_security_policy": "script-src 'unsafe-eval' 'self'; object-src 'self';",
  "permissions": [
    "tabs",
    "*://*/*"
  ]
}
